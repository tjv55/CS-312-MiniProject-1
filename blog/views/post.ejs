<%- include('partials/header') %>

<div class="container mt-4">
  <h2 class="text-purple mb-2"><%= post.title %></h2>
  <p class="text-muted">
    <strong>by</strong> <%= post.author %> — <%= post.createdAt %>
  </p>
  <p><strong>Category:</strong> <%= post.category %></p>
  <hr>
  <p><%= post.content %></p>

  <form action="/delete/<%= post.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?');" class="d-inline">
    <button type="submit" class="btn btn-danger">Delete Post</button>
  </form>

  <a href="/" class="btn btn-secondary ms-2">← Back to Home</a>
</div>

<%- include('partials/footer') %>